@{
    Layout = "_AdminLayout";
}

@model About


<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">HAKKIMIZDA EKLEME SAYFASI</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <!-- /.card-body -->
    @if (ViewBag.state == "update")
    {
        <form asp-controller="AdminAbout" asp-action="AboutGuncelle">
            <div class="card-body">
                <div class="form-group">
                    <label for="exampleInputEmail1">HAKKIMIZDA</label>
                    <input asp-for="VisionContent" type="text" class="form-control" placeholder="hakkımızda yazısı ekleyin">
                    <span asp-validation-for="VisionContent" style="color:crimson"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">KALİTE POLİTAMIZ</label>
                    <input type="text" asp-for="MissionContent" class="form-control" placeholder="kalite politikanızı ekleyin">
                    <span asp-validation-for="MissionContent" style="color:crimson"></span>
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1">ZAMANINDA TESLİMAT</label>
                    <input type="text" asp-for="OurGoalContent" class="form-control" placeholder="zamanında teslimat ile ilgili bir yazı ekleyin">
                    <span asp-validation-for="OurGoalContent" style="color:crimson"></span>
                </div>
            </div>

            <div class="text-danger text-center" asp-validation-summary="ModelOnly"></div>
            <div class="card-footer">
                <button type="submit" class="btn btn-primary">HAKKİMİZDA GUNCELLE</button>
            </div>
        </form>

    }
    else
    {
<form asp-controller="AdminAbout" asp-action="AboutEkle" method="post">
    <div class="card-body">
        <div class="form-group">
            <label for="exampleInputEmail1">HAKKIMIZDA</label>
            <input asp-for="VisionContent" type="text" class="form-control" placeholder="hakkımızda yazısı ekleyin">
            <span asp-validation-for="VisionContent" style="color:crimson"></span>
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">KALİTE POLİTAMIZ</label>
            <input type="text" asp-for="MissionContent" class="form-control" placeholder="kalite politikanızı ekleyin">
            <span asp-validation-for="MissionContent" style="color:crimson"></span>
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">ZAMANINDA TESLİMAT</label>
            <input type="text" asp-for="OurGoalContent" class="form-control" placeholder="zamanında teslimat ile ilgili bir yazı ekleyin">
            <span asp-validation-for="OurGoalContent" style="color:crimson"></span>
        </div>
    </div>

    <div class="text-danger text-center" asp-validation-summary="ModelOnly"></div>
    <div class="card-footer">
        <button type="submit" class="btn btn-primary">HAKKİMİZDA GUNCELLE</button>
    </div>
</form>
    }


</div>
