@{
    Layout = "_Layout";
}

@model Contact



<body>


    <div class="w-100">

        <div class="d-flex flex-column w-100">
            <div class="page-title d-flex align-items-center bg-image py-5" data-img-src="/images/upload/page-title-bg-16.jpg" style="background-image: url(&quot;/images/upload/page-title-bg-16.jpg&quot;);">
                <div class="container page-title-container">
                    <div class="row py-5">
                        <div class="col text-center">

                            <h1 class="display-3 font-weight-800 text-white mb-1">
                                İLETİŞİM
                            </h1>

                            <div class="lead text-white-75 mb-5">
                                Bizimle iletişime geçin
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="bg-primary py-4 mt-up50 rounded-xl shadow-lg">

                        <div data-height="6px" style="height: 6px;"></div>

                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb breadcrumb-light-2 justify-content-center mb-0">
                                <li class="breadcrumb-item text-uppercase"><a href="#">Homepage</a></li>
                                <li class="breadcrumb-item text-uppercase active" aria-current="page">İletişim</li>
                            </ol>
                        </nav>

                        <div data-height="6px" style="height: 6px;"></div>

                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="main-content py-0">

        <div class="section pt-5">
            <div class="container">

                <div data-height="10px" style="height: 10px;"></div>

                <!-- Icons info section -->


                <div data-height="10px" style="height: 10px;"></div>

                <!-- Contact form box -->
                <div class="row no-gutters position-relative overflow-hidden z-index-1 shadow-lg rounded-xl">

                    <div class="col-lg-7 bg-white px-3 py-5 p-md-5">
                        <div class="px-3 py-4">

                            <h3 class="section-title-3 text-left font-weight-700 mb-4">SİZİNLE İLETİŞİME GEÇELİM</h3>

                            <form class="pt-4" asp-action="MessageGonder" asp-controller="AdminMessage" method="post">
                                <div class="row">

                                    <div class="form-group col-md-6 pb-3 mb-3">
                                        <input type="text" name="Name" class="form-control form-round form-control-lg" placeholder="İsim" required="">
                                    </div>

                                    <div class="form-group col-md-6 pb-3 mb-3">
                                        <input type="email" name="Email" class="form-control form-round form-control-lg" placeholder="Email" required="">
                                    </div>

                                    <div class="form-group col-12 pb-3 mb-3">
                                        <input type="text" name="Subject" class="form-control form-round form-control-lg" placeholder="Konu" required="">
                                    </div>

                                    <div class="form-group col-12 mb-5">
                                        <textarea class="form-control form-round form-control-lg py-3" name="SendMessage" rows="7" placeholder="Mesajınız" required=""></textarea>
                                    </div>

                                    <div class="col-md-6 col-lg-12 col-xl-6">
                                        <button type="submit" class="btn btn-block btn-round btn-lg btn-primary">Mesaj gönder</button>
                                    </div>

                                </div>
                            </form>

                        </div>
                    </div>

                    <div class="col-lg-5">
                        <div class="contact-box h-100 px-4 py-5 text-white-75 bg-image" data-img-src="/images/upload/contact-box-bg-05.jpg" style="background-image: url(&quot;/images/upload/contact-box-bg-05.jpg&quot;);">
                            <div class="px-xl-3 py-4">

                                <h3 class="section-title-3 title-light-1 text-left font-weight-700 mb-4">İLETİŞİM BİLGİLERİ</h3>

                                <div class="row contact-info-list pt-4 mb-5">

                                    <div class="col-md-6 col-lg-12 contact-info-item">
                                        <div class="icon-info-1">
                                            <div class="icon-element text-white pt-1">
                                                <i class="fas fa-map-marker-alt fa-2x"></i>
                                            </div>
                                            <div class="icon-info-text pl-2">
                                                <h6 class="mb-1 font-weight-700 text-white">Adres</h6>
                                                <p class="mb-0">@Model.Address</p>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-6 col-lg-12 contact-info-item">
                                        <div class="icon-info-1">
                                            <div class="icon-element text-white pt-1">
                                                <i class="fas fa-mobile-alt fa-2x"></i>
                                            </div>
                                            <div class="icon-info-text pl-2">
                                                <h6 class="mb-1 font-weight-700 text-white">Telefon</h6>
                                                <p class="mb-0">@Model.PhoneOne<br>@Model.PhoneTwo</p>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-6 col-lg-12 contact-info-item">
                                        <div class="icon-info-1">
                                            <div class="icon-element text-white pt-1">
                                                <i class="fas fa-paper-plane fa-2x"></i>
                                            </div>
                                            <div class="icon-info-text pl-2">
                                                <h6 class="mb-1 font-weight-700 text-white">E-mail</h6>
                                                <a href="#" class="text-white-75">@Model.EmailOne</a><br>
                                                <a href="#" class="text-white-75">@Model.EmailTwo</a>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-md-6 col-lg-12 contact-info-item">
                                        <div class="icon-info-1">
                                            <div class="icon-element text-white pt-1">
                                                <i class="fas fa-globe fa-2x"></i>
                                            </div>
                                            <div class="icon-info-text pl-2">
                                                <h6 class="mb-1 font-weight-700 text-white">Web site</h6>
                                                <a href="#" class="text-white-75">@Model.WebSite</a>
                                            </div>
                                        </div>
                                    </div>

                                </div>

                                <div class="pt-2 px-2">
                                    <a href="@Model.Instagram" target="_blank" class="btn btn-sm btn-round btn-primary mr-1"><i class="fab fa-twitter"></i>Twitter</a>
                                    <a href="#" target="_blank" class="btn btn-sm btn-round btn-orchid mr-1"><i class="fab fa-instagram"></i>Instagram</a>
                                    <a href="#" target="_blank" class="btn btn-sm btn-round btn-indigo"><i class="fab fa-facebook-f"></i>Facebook</a>
                                </div>

                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>

        <!-- Google map section -->
        <div class="section">
            <div class="container-fluid px-0">
                <div class="row map-wrapper no-gutters mt-up50 mt-md-up75 mt-lg-up125">
                    <div class="col-12 map-container">
                        <iframe class="location-map scrolloff" src="@Model.MapLink" width="100%" height="100%" style="border:0" allowfullscreen=""></iframe>
                    </div>
                </div>
            </div>
        </div>

        <!-- Call to action section -->


    </div>
</body>