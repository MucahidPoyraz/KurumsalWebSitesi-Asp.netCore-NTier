@{
    Layout = "_AdminLayout";
}

@model ProductSlider

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">ÜRÜN EKLEME SAYFASI</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    @if (ViewBag.state == "update")
    {<form asp-controller="AdminProductSlider" asp-action="ProductSliderGuncelle" enctype="multipart/form-data">
         <div class="card-body">

             <div class="form-group">
                 <input type="text" class="form-control" asp-for="ProductId" value="@Model.ProductId" hidden>
             </div>

             <div class="form-group">
                 <label for="exampleInputEmail1" onchange="PreviewImage();">RESİM SEÇİNİZ</label>
                 <input type="text" asp-for="PruductImage" value="@Model.PruductImage" name="PruductImage" hidden>
                 <input type="file" class="form-control uploadImage" asp-for="PruductImage" placeholder="resim seçiniz" onchange='openFile(event)'>
                 <div>
                     <img id='output' style="width : 100px;height:100px" src="/images/imgs/@Model.PruductImage"/>
                 </div>
                 <span id="error-message" class="validation-error-label"></span>
                 <span asp-validation-for="PruductImage" id="PruductImage" style="color:crimson"></span>
             </div>

         </div>

            <div class="text-danger text-center" asp-validation-summary="ModelOnly"></div>
            <!-- /.card-body -->

            <div class="card-footer">
                <button type="submit" class="btn btn-primary">ÜRÜN RESİM GUNCELLE</button>
            </div>
        </form> }
    else
    {
        <form asp-controller="AdminProductSlider" asp-action="ProductSliderEkle" enctype="multipart/form-data">
            <div class="card-body">

                <div class="form-group">
                    <input type="text" class="form-control" asp-for="ProductId" value="@ViewBag.ProductId" hidden>

                </div>

                <div class="form-group">
                    <input type="text" class="form-control" asp-for="Id" value="0" hidden>

                </div>


                <div class="form-group">
                    <label for="exampleInputEmail1" onchange="PreviewImage();">RESİM SEÇİNİZ</label>
                    <input type="file" class="form-control uploadImage" asp-for="PruductImage" id="PruductImage" placeholder="resim seçiniz" onchange='openFile(event)'>
                    <div>
                        <img id='output' style="width : 100px;height:100px" />
                    </div>
                    <span id="error-message" class="validation-error-label"></span>
                    <span asp-validation-for="PruductImage" style="color:crimson"></span>
                </div>

            </div>

            <div class="text-danger text-center" asp-validation-summary="ModelOnly"></div>
            <!-- /.card-body -->

            <div class="card-footer">
                <button type="submit" class="btn btn-primary">ÜRÜN RESİM EKLE</button>
            </div>
        </form>
    }

</div>
