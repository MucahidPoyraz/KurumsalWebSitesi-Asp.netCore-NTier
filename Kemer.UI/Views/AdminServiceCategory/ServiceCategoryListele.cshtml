@{
    Layout = "_AdminLayout";
}

@model List<ServiceCategory>

@if (TempData["Ekleme"] != null)
{

<div class="alert success" id=mainAlertMessage>
    <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
    @TempData["Ekleme"]
</div>
}

@if (TempData["Guncellendi"] != null)
{

<div class="alert info" id=mainAlertMessage>
    <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
    @TempData["Guncellendi"]
</div>
}

@if (TempData["Silindi"] != null)
{

<div class="alert warning" id=mainAlertMessage>
    <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>
    @TempData["Silindi"]
</div>
}


<div style="width:100%"><a asp-action="ServiceCategoryEkle" asp-controller="AdminServiceCategory" class="btn btn-primary">hizmet kategori Ekle</a></div>
<br />

<section class="content">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <!-- /.card-header -->
                <div class="card-body">
                    <table id="example2" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>CategoryIcon</th>
                                <th>ServiceCategoryNames</th>


                                <th>İŞLEMLER</th>

                            </tr>
                        </thead>

                        @foreach (var item in Model)
                        {
                        <tbody>
                            <tr>
                                <td width="100" height="100" align="center"><img src="/images/imgs/@item.CategoryIcon" height="100" width="100"></td>
                                <td>@item.ServiceCategoryName</td>

                                <td>
                                    <a asp-action="ServiceCategorySil" asp-controller="AdminServiceCategory" asp-route-id="@item.Id" class="btn btn-danger" onclick="return confirm('Silmek istediginize emin misiniz');">ServiceCategory Sil</a>
                                    <a asp-action="ServiceCategoryGuncelle" asp-controller="AdminServiceCategory" asp-route-id="@item.Id" class="btn btn-info">Hizmet Kategori Guncelle</a>
                                </td>

                            </tr>
                        </tbody>
                        }


                        <tfoot>
                            <tr>
                                <th>CategoryIcon</th>
                                <th>ServiceCategoryNames</th>

                                <th>İŞLEMLER</th>

                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
            <!-- Control Sidebar -->
            <aside class="control-sidebar control-sidebar-dark">
                <!-- Control sidebar content goes here -->
            </aside>
            <!-- /.control-sidebar -->
        </div>
    </div>
</section>