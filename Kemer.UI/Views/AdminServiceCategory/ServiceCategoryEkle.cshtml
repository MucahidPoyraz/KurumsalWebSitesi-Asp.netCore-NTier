@{
    Layout = "_AdminLayout";
}

@model ServiceCategory

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">HİZMET KATEGORİ SAYFASI</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    @if (ViewBag.state == "update")
    {<form asp-controller="AdminServiceCategory" asp-action="ServiceCategoryGuncelle" enctype="multipart/form-data">
         <div class="card-body">
             <div class="form-group">
                 <label for="exampleInputEmail1">HİZMET KATEGORİ ADI GİRİNİZ</label>
                 <input type="text" class="form-control" asp-for="ServiceCategoryName" placeholder="hizmet kategori giriniz">
                 <span asp-validation-for="ServiceCategoryName" style="color:crimson"></span>
             </div>

             <div class="form-group">
                 <label for="exampleInputEmail1">RESİM SEÇİNİZ</label>
                 <input type="text" asp-for="CategoryIcon" value="@Model.CategoryIcon" name="CategoryIcon" hidden>
                 <input type="file" class="form-control uploadImage" asp-for="CategoryIcon" id="CategoryIcon" placeholder="resim seçiniz" onchange='openFile(event)'>
                 <div>
                     <img id='output' style="width : 100px;height:100px" src="/images/imgs/@Model.CategoryIcon"/>
                 </div>
                 <span id="error-message" class="validation-error-label"></span>
                 <span asp-validation-for="CategoryIcon" style="color:crimson"></span>
             </div>

             <div class="text-danger text-center" asp-validation-summary="ModelOnly"></div>
             <!-- /.card-body -->

             <div class="card-footer">
                 <button type="submit" class="btn btn-primary">HİZMET KATEGORİ GUNCELLE</button>
             </div>
</form>}
    else
    {
        <form asp-controller="AdminServiceCategory" asp-action="ServiceCategoryEkle" enctype="multipart/form-data">
            <div class="card-body">
                <div class="form-group">
                    <label for="exampleInputEmail1">HİZMET KATEGORİ ADI GİRİNİZ</label>
                    <input type="text" class="form-control" asp-for="ServiceCategoryName" placeholder="hizmet kategori giriniz">
                    <span asp-validation-for="ServiceCategoryName" style="color:crimson"></span>
                </div>

                <div class="form-group">
                    <label for="exampleInputEmail1" onchange="PreviewImage();">İKON SEÇİNİZ</label>
                    <input type="file" class="form-control uploadImage" asp-for="CategoryIcon" id="CategoryIcon" placeholder="ikon seçiniz" onchange='openFile(event)'>
                    <div>
                        <img id='output' style="width : 100px;height:100px" />
                    </div>
                    <span id="error-message" class="validation-error-label"></span>
                    <span asp-validation-for="CategoryIcon" style="color:crimson"></span>
                </div>

            <div class="text-danger text-center" asp-validation-summary="ModelOnly"></div>
            <!-- /.card-body -->

            <div class="card-footer">
                <button type="submit" class="btn btn-primary">HİZMET KATEGORİ EKLE</button>
            </div>
        </form>
    }

</div>
