                <div class="text-danger text-center" asp-validation-summary="ModelOnly"></div>
                <!-- /.card-body -->

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">HİZMET EKLE</button>
                </div>
            </div>
        </form>
