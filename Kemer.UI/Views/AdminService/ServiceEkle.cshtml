                <div>
                    <img id='outputtwo' style="width : 100px;height:100px" src="/images/imgs/@Model.ImageUrlTwo" />
                </div>
                <span id="error-messagetwo" class="validation-error-label"></span>
                <span asp-validation-for="ImageUrlTwo" style="color:crimson"></span>
            </div>

            <div class="form-group">
                <label>İÇERİK GİRİNİZ</label>
                <input type="text" class="form-control" asp-for="Content" placeholder="içerik giriniz">
                <span asp-validation-for="Content" style="color:crimson"></span>
            </div>

            <div class="form-group">
                <label for="exampleInputEmail1">VİDEO LİNK GİRİNİZ</label>
                <input type="text" class="form-control" asp-for="VideoLink" placeholder="video link giriniz">
                <span asp-validation-for="VideoLink" style="color:crimson"></span>
            </div>

            <div class="text-danger text-center" asp-validation-summary="ModelOnly"></div>
            <!-- /.card-body -->

            <div class="card-footer">
                <button type="submit" class="btn btn-primary">HİZMET GUNCELLE</button>
            </div>
        </div>
        </div>
</form>}
    else
    {
        <form asp-controller="AdminService" asp-action="ServiceEkle" enctype="multipart/form-data">
            <div class="card-body">
                <div class="form-group">
                    <label>DEPARTMENT SEÇİNİZ</label>

                    <select class="form-control" asp-items="@ViewBag.ServiceCategory" name="@(nameof(ViewBag.ServiceCategoryID))">
