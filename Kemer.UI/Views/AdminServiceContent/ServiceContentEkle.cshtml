@{
    Layout = "_AdminLayout";
}

@model ServiceContent

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">HİZMET İÇERİK EKLEME SAYFASI</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    @if (ViewBag.state == "update")
    {<form asp-controller="AdminServiceContent" asp-action="ServiceContentGuncelle" enctype="multipart/form-data">
         <div class="card-body">

              <div class="form-group">
                 <input type="text" class="form-control" asp-for="ServiceId" value="@Model.ServiceId" hidden>
             </div>

            

             <div class="form-group">
                 <label for="exampleInputEmail1">BAŞLIK GİRİNİZ</label>
                 <input type="text" class="form-control" asp-for="Header" placeholder="başlik giriniz">
                 <span asp-validation-for="Header" style="color:crimson"></span>
             </div>

             <div class="form-group">
                 <label for="exampleInputEmail1">İÇERİK GİRİNİZ</label>
                 <input type="text" class="form-control uploadImage" asp-for="Content" placeholder="başlik-1 giriniz">
                 <span asp-validation-for="Content" style="color:crimson"></span>
             </div>

             <div class="form-group">
                 <label for="exampleInputEmail1" onchange="PreviewImage();">RESİM SEÇİNİZ</label>
                 <input type="text" asp-for="ImageUrl" value="@Model.ImageUrl" name="ImageUrl" hidden>
                 <input type="file" class="form-control uploadImage" asp-for="ImageUrl" id="ImageUrl" placeholder="resim seçiniz" onchange='openFile(event)'>
                 <div>
                     <img id='output' style="width : 100px;height:100px" src="/images/imgs/@Model.ImageUrl"/>
                 </div>
                 <span id="error-message" class="validation-error-label"></span>
                 <span asp-validation-for="ImageUrl" style="color:crimson"></span>
             </div>

             <div class="text-danger text-center" asp-validation-summary="ModelOnly"></div>
             <!-- /.card-body -->

             <div class="card-footer">
                 <button type="submit" class="btn btn-primary">HİZMET İÇERİK GUNCELLE</button>
             </div>
         </div>
        </form>}
    else
    {
    <form asp-controller="AdminServiceContent" asp-action="ServiceContentEkle" enctype="multipart/form-data">
        <div class="card-body">

            <div class="form-group">
                <input type="text" class="form-control" asp-for="ServiceId" value="@ViewBag.ServiceId" hidden>

            </div>

            <div class="form-group">
                <input type="text" class="form-control" asp-for="Id" value="0" hidden>

            </div>


            <div class="form-group">
                <label for="exampleInputEmail1">BAŞLIK GİRİNİZ</label>
                <input type="text" class="form-control" asp-for="Header" placeholder="başlik giriniz">
                <span asp-validation-for="Header" style="color:crimson"></span>
            </div>

            <div class="form-group">
                <label for="exampleInputEmail1">İÇERİK GİRİNİZ</label>
                <input type="text" class="form-control" asp-for="Content" placeholder="başlik-1 giriniz">
                <span asp-validation-for="Content" style="color:crimson"></span>
            </div>

            <div class="form-group">
                <label for="exampleInputEmail1" onchange="PreviewImage();">RESİM SEÇİNİZ</label>
                <input type="file" class="form-control uploadImage" asp-for="ImageUrl" id="ImageUrl" placeholder="resim seçiniz" onchange='openFile(event)'>
                <div>
                    <img id='output' style="width : 100px;height:100px" />
                </div>
                <span id="error-message" class="validation-error-label"></span>
                <span asp-validation-for="ImageUrl" style="color:crimson"></span>
            </div>

            <div class="text-danger text-center" asp-validation-summary="ModelOnly"></div>
            <!-- /.card-body -->

            <div class="card-footer">
                <button type="submit" class="btn btn-primary">HİZMET İÇERİK EKLE</button>
            </div>
        </div>
</form>
    }

</div>
